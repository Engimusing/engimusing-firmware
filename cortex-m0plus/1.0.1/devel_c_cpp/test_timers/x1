#include "Arduino.h"
#include "test.h"

extern LEUARTClass Serial;
static String test_help = "test08 - Generate pulses for pulseIn() to test";

void test08_test(void)
{
  pinMode(4, OUTPUT);

  GPIO->P[PORTB].DOUTCLR = 0x100;
  delayMicroseconds(8);
  GPIO->P[PORTB].DOUTSET = 0x100;
}

void test08_desc(void)
{
  delay(2); Serial.println("\n\rTest Description:");
  delay(2); Serial.println("  Generate pulses for pulseIn() to test");
  delay(2); Serial.println("  Start test09 first on other cpu");
}

void test08(uint8_t function)
{
  switch(function) {
  case TESTHELP:
    Serial.print(test_help);
    break;
  case DESCRIPTION:
    test08_desc();
    break;
  case RUNTEST:
    Serial.println("\n\rRun test08");
    test08_test();
    break;
  default:
    Serial.println("\n\rBad Test Function");
    break;
  }
}
